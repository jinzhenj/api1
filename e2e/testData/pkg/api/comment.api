

  service comment {

  	@doc(
  		summary: creat
  	)
  	@handler createComments
  	post /api/comments (pkg.types.Comments)

  	@doc(
  		summary: get
  	)
  	@handler getComments
  	get /api/comments (pkg.types.PagerReq) return (pkg.types.PagerRes{data=[]pkg.types.Comments})


  	@doc(
  		summary: get
  	)
  	@handler getComment
  	get /api/comments/:id (pkg.types.JustID) return (pkg.types.Comments)

  }


  service role {

  	@doc(
  		summary: creat
  	)
  	@handler createRoles
  	post /api/roles (pkg.types.Roles)

  }


  